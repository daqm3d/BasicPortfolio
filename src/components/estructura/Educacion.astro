---
import Section from "@/components/Section.astro"
import { education } from "@/jsons/cv-AP.json"
---
<Section id="Educacion" title="Educación">
  <div>
  {
    education.map( ({area, institution, startDate, endDate}) => {        
      return(
        <article>
          <header>
            <time datetime={`$[startDate - endDate ?? "actualmente" ]`} >Año {startDate}-{ endDate? ` ${endDate}` : "Actualmente" }</time>
          </header>
          <footer>
            <h3>Titulo: {area}</h3>
            <h4>{institution}</h4>
          </footer>
        </article>
      )
    })
  }
  </div>
</Section>
<style>
  div{
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  article{
    display: grid;
    grid-template-columns: 1fr 2fr;
    grid-gap: 1rem;
    h3{
        font-size: 1rem;
    }
    h4, header{
        font-size: .8rem;
        opacity: 40%;
        font-weight: 500;
    }
  }
  @media (width < 620px) {
  article{
    grid-template-columns: 1fr;
    grid-gap: 0;
    header:nth-child(1){
      grid-row: 2;
    }
    }
  }
 }
</style>