  function startDrag(event) {
    const card = event.target.closest("article")

    
    let starX = (event.pageX ?? event.touches[0].pageX) - card.offsetLeft;
    let starY = (event.pageY ?? event.touches[0].pageY ) - card.offsetTop;
    card.style.setProperty("--x",starX+"px");
    card.style.setProperty("--y",starY+"px");
    console.log(card)
    //! como hacaer ::before al article
    card.style.opacity=1;
    
  }
  let ver= document.querySelectorAll("article");
  ver.forEach(ve =>{
    if (ve.className=="proyectos") {
      ve.addEventListener("mousemove", startDrag)
      ve.addEventListener("touchmove", startDrag, {passive:true})
    }
  })
  
</script>

<style>
  ul {
    display: grid;
    grid-template-columns: repeat(
      auto-fit,
      minmax(260px, 1fr)
    );
    gap: 1rem;
  }

  article {
    display: flex;
    flex-direction: column;
    border: 2px solid #eee;
    border-radius: 1rem;
    height: 100%;
    padding: 16px;
    gap: 1rem;

    /* ver code */
    position: relative;
    overflow: hidden;
    transition: .5s;
    &::before{
    content: "";
    position: absolute;
    top: var(--y);
    left: var(--x);
    transform: translate(-50%,-50%);
    background: radial-gradient(#5bfa5b,transparent, transparent),
    radial-gradient(#18193f,transparent,transparent);
    width: 100%;
    height: 100%;
    opacity: 0;
    transition: .5s,top 0s, left 0s
    }
    &:hover::before{
      opacity: 1;
    }
    
    &::after{
      content: "";
      position: absolute;
      inset:3px;
      background: #fafafa;
      border-radius: 1rem;      
    }
    /* --- */
    header {
      z-index: 1;
      flex: 1;
      h3 {
        display: flex;
        margin-bottom: 0.5rem;
        gap: 0.5rem;
        a {
          color: #111;
          letter-spacing: 0.1rem;
          transition: .5s;
        }
        span {
          color: #5bfa5b;
        }
        a:has(svg) {
          padding: 1px;
          display: inline-flex;
          border: 1.5px solid #cfcfcfcb;
          border-radius: 0.5rem;
          transition:
            background 0.3s ease-in-out,
            border 0.5s ease-in-out;

          margin-inline-start: auto;
        }
        a:has(svg):hover {
          background: #5bfa5b;
          border: 1.5px solid #18193f;
          svg {
            animation: 1s linear social;
          }
        }
      }
      a.hover:hover {
        text-decoration: underline;
      }
    }
    footer {
      z-index: 1;
      display: flex;
      flex-wrap: wrap;
      gap: 1rem;
      font-size: 0.6rem;
      span {
        border-radius: 0.5rem;
        background: #eee;
        padding: 0.2rem 0.6rem;
      }
    }
  }
  @media print {
    footer span {
      border: 2px solid #eee;
      padding: 0.1rem 0.3rem;
    }
    header span.print {
      display: flex;
      align-items: center;
      margin-top: 0.5rem;
      gap: 0.5rem;
    }
  }
</style>