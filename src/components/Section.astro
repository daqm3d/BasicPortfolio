---
const { title, id } = Astro.props;
---

<section id={id}>
  {title && <h2>{title}</h2>}
  <div><slot /></div>
</section>
<style>
  section {
    max-width: 700px;
    margin-bottom: 25px;
  }
  h2 {
    margin-bottom: 10px;
    font-weight: 700;
    line-height: 1.5;
    letter-spacing: 0.1rem;
    font-size: 1.5rem;
  }
  div {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
</style>
