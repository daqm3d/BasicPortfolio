---
import Layout from '@/layouts/Layout.astro';
import Hero from '@/components/estructura/Hero.astro';
import Experiencia from '@/components/estructura/Experiencia.astro';
import Conocimientos from '@/components/estructura/Conocimientos.astro';
import Cursos from '@/components/estructura/Cursos.astro';
import Proyectos from '@/components/estructura/Proyectos.astro';
import Educacion from '@/components/estructura/Educacion.astro';
import Referencias from '@/components/estructura/Referencias.astro';
import Manager from '@/components/Manager.astro';

import { basics } from '@/jsons/cv-AP.json';
const { alias, label } = basics;
---

<Layout title={`Portfolio de ${alias} - ${label}`}>
  <main>
    <Hero />

    <Experiencia />

    <dir class="binomio">
      <Conocimientos />
      <!--       <Cursos /> -->
    </dir>

    <Proyectos />

    <div class="binomio">
      <Educacion />
      <Referencias />
    </div>
  </main>
  <Manager />
</Layout>

<style>
  main {
    z-index: 1;
    background: linear-gradient(
      transparent 1%,
      #fafafa 10% 90%,
      transparent 100%
    );
    /* background: radial-gradient(#fafafa 90%, transparent); */
    position: relative;
    display: flex;
    flex-direction: column;
    padding: 4rem;
    margin: auto;
    width: 100%;
    max-width: 800px;
    .binomio {
      display: grid;
      grid-template-columns: repeat(
        auto-fit,
        minmax(250px, 1fr)
      );
      grid-column-gap: 2rem;
    }
    .print {
      display: none;
    }
  }
  @media print {
    main {
      padding: 0.5rem 1rem;
      .print {
        display: inherit;
      }
      .notPrint {
        display: none;
      }
    }
  }
</style>
